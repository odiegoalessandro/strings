generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id Int @id @default(autoincrement())
  body String
  isArchived Boolean @default(false)
  isDeleted Boolean @default(false)
  created_at DateTime @default(now())
}
